{
  "name": "ai-werkstattbackend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "setup": "npm i && npm run build && pm2 start --name chat-db npm -- start --update-env --time && pm2 save",
    "deploy": "git pull --no-rebase && npm run build && pm2 restart chat-db --update-env --time && pm2 save"
  },
  "nodemonConfig": {
    "watch": [
      "./"
    ],
    "ext": "ts, json",
    "exec": "tsx index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12"
  }
